		<script>
			function parseCookie(key){
				var cookie = document.cookie
				var cookies = cookie.split(";")
				var variables = []
				for(var i = 0; i < cookies.length; i++){
						variables.push(cookies[i].trim().split("="))
				}
				for(var i = 0; i < variables.length; i++){
						if(variables[i][0] == key){
								return variables[i][1];
						}
				}
				return null;
			}

			var usname = "<%= usname %>";
			console.log(usname);
			$(function(){
				console.log(usname);
				//if (usname === 1){
				var socket = io(); 
				if (usname === '1' && (typeof parseCookie("name") !== "unefined")){
					console.log("cookies: " + parseCookie("name") + " gonna updateBoardW");
					socket.emit('updateBoardW', JSON.stringify({'name':parseCookie("name")}));
					
				}else if (usname === '2' && (typeof parseCookie("name") !== "unefined")){
					console.log("cookies: " + parseCookie("name"));
					socket.emit('updateBoardL', JSON.stringify({'name':parseCookie("name")}));
				}else{
					socket.emit('getBoard');
					console.log("should get board");
					var boardVals = null;
				}
				socket.on('returnBoard', (msg) => {
						boardVals = JSON.parse(msg);
						
						text = "";
						boardVals.forEach(generateTable);
						console.log(msg);
						$(text).appendTo($(".board"));
				});
				
			});
			
			function generateTable(row){
			     text += '<div class="entry"> <div> ' + row.uname + '</div>';
					 text += "<div> " + row.score + " </div></div>";
			}
				
		</script>
		
